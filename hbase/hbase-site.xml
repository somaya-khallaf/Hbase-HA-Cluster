  </property>

  <property>
    <name>hbase.zookeeper.property.clientPort</name>
    <value>2181</value>
  </property>

  <property>
    <name>hbase.regionserver.hostname.disable.master.reversedns</name>
    <value>true</value>
  </property>
  
